<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efefef">
    <com.yunshu.widget.NavBarView
        android:id="@+id/navbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:navBarHasBack="true"
        custom:navBarTitle="生产包信息"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/image_parcel"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_default"
            android:contentDescription="@string/text_empty"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/image_parcel"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <com.yunshu.widget.FontTextView
                    android:id="@+id/text_parcel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:text="男保暖背心"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <com.yunshu.widget.FontTextView
                    android:id="@+id/text_parcel_sku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="#ed5a38"
                    android:textSize="14sp"
                    android:text="P00Y020003131"/>
                <com.yunshu.widget.FontTextView
                    android:id="@+id/text_parcel_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:text="20件"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <com.yunshu.widget.FontTextView
                    android:id="@+id/text_parcel_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:text="浅灰"/>
                <com.yunshu.widget.FontTextView
                    android:id="@+id/text_parcel_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:text="XL"/>
                <com.yunshu.widget.FontTextView
                    android:id="@+id/text_parcel_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:text="无牌"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <com.yunshu.widget.FontTextView
                    android:id="@+id/text_parcel_container_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textColor="#ed5a38"
                    android:textSize="14sp"
                    android:text="C000001"/>
                <com.yunshu.widget.FontTextView
                    android:id="@+id/text_parcel_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:text="B20180426000401"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cbcbcb" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >

        <LinearLayout
            android:id="@+id/layout_parcel_button_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp" />
    </ScrollView>
</LinearLayout>